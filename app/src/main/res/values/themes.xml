<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherLogger" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/green_dark</item>
        <item name="colorOnSecondary">@color/green_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextRobotoMedium">
        <item name="fontPath">fonts/roboto_medium.ttf</item>
    </style>

    <style name="TextRobotoMedium_Small" parent="TextRobotoMedium">
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="TextRobotoMedium_Medium" parent="TextRobotoMedium">
        <item name="android:textSize">@dimen/_18ssp</item>
    </style>

    <style name="TextRobotoMedium_Large" parent="TextRobotoMedium">
        <item name="android:textSize">@dimen/_22ssp</item>
    </style>


    <style name="TextRobotoBold">
        <item name="fontPath">fonts/roboto_bold.ttf</item>
    </style>

    <style name="TextRobotoBold_Small" parent="TextRobotoBold">
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="TextRobotoBold_Medium" parent="TextRobotoBold">
        <item name="android:textSize">@dimen/_18ssp</item>
    </style>

    <style name="TextRobotoBold_Large" parent="TextRobotoBold">
        <item name="android:textSize">@dimen/_22ssp</item>
    </style>


    <style name="TextAmperzand">
        <item name="fontPath">fonts/amperzand.ttf</item>
    </style>
</resources>